<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dp_4"
        android:layout_margin="10dp"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checkbox"
            android:theme="@style/MyCheckBox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_nft"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/checkbox"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_nft"
            android:text="@string/name"
            android:textSize="18sp"
            android:paddingLeft="12dp"
            android:textColor="@color/color_1b1b1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_power_title"
            app:layout_constraintTop_toBottomOf="@id/tv_name_title"
            app:layout_constraintLeft_toRightOf="@id/iv_nft"
            android:text="@string/power"
            android:textSize="18sp"
            android:paddingLeft="12dp"
            android:textColor="@color/color_1b1b1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profit_title"
            app:layout_constraintTop_toBottomOf="@id/tv_power_title"
            app:layout_constraintLeft_toRightOf="@id/iv_nft"
            android:text="@string/profit"
            android:textSize="18sp"

            android:paddingLeft="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/color_1b1b1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_power_title"
        android:text="@string/name"
        android:textSize="18sp"
            android:singleLine="true"
        android:paddingLeft="12dp"
        android:textColor="@color/color_aaaaaa"
        android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_power"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toRightOf="@id/tv_power_title"
            android:text="@string/power"
            android:textSize="18sp"
            android:singleLine="true"

            android:paddingLeft="12dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/mainColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profit"
            app:layout_constraintTop_toBottomOf="@id/tv_power"
            app:layout_constraintLeft_toRightOf="@id/tv_power_title"
            android:text="@string/profit"
            android:textSize="18sp"
            android:singleLine="true"

            android:paddingLeft="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/mainColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>