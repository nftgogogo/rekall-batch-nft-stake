<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:id="@+id/tips"
            android:textColor="@color/color_1b1b1b"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/to_settlement_tips"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/finish_ll"
            app:layout_constraintTop_toBottomOf="@id/tips"
            android:id="@+id/list"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/finish_ll"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/finish"
                    android:textColor="@color/color_1b1b1b"
                    android:layout_height="wrap_content" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/finish_num_tv"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/finish"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_aaaaaa"
                    android:layout_height="wrap_content" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="30dp"
                    android:text="@string/profit"
                    android:textColor="@color/color_1b1b1b"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/finish_count_tv"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_aaaaaa"
                    android:layout_height="wrap_content" />
        </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout></layout>